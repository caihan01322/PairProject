<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.PaperMapper">
<select id="getTopWords" resultType="Keyword">
    select keyword,count from xjbs.keyword_count ORDER BY count DESC limit 0,10;
</select>

    <select id="getPapers" parameterType="_int" resultType="Paper">
        select * from xjbs.paper where paper_id = #{paper_id}
    </select>

    <select id="getKeyWords" parameterType = "_int" resultType="PaperKeyword">
        select word from xjbs.keyword where paper_id = #{paper_id}
    </select>
</mapper>